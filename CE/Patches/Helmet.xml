<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- ========== fully enclosed helmet ========== -->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="AM_BulletproofMask"]/statBases</xpath>
		<value>
			<Bulk>2</Bulk>
			<WornBulk>0</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="AM_BulletproofMask"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>11</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="AM_BulletproofMask"]/statBases/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>30</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="AM_BulletproofMask"]/statBases/Flammability</xpath>
		<value>
			<Flammability>0</Flammability>
		</value>
	</Operation>
</Patch>