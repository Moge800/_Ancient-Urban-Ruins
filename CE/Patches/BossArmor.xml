		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="AM_CompFlakSuit"]/statBases/Mass</xpath>
		<value>
			<Mass>25</Mass>
		</value>
	</Operation>

