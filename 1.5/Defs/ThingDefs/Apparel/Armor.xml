<?xml version="1.0" encoding="utf-8"?>
<Defs>

<ThingDef Name="AM_ArmorMachineableBase" ParentName="ApparelBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <recipeUsers>
        <li>AM_AncientDismantlingWorkbench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
          <li MayRequire="Ludeon.RimWorld.Anomaly">Bioferrite</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
	   <researchPrerequisites>
      <li>AM_RecyclingAssembly</li>
    </researchPrerequisites>
    </recipeMaker>
	<tradeTags>
      <li>AM_Armor</li>
    </tradeTags>
  </ThingDef>

	<ThingDef ParentName="AM_ArmorMachineableBase">
		<defName>AM_AScompFD</defName>
		<label>composite assault dress</label>
		<description>Four bulletproof plates firmly protect the dress. Use four fourth level PE plates for protection, keeping its weight within an acceptable range. Due to being too bulky, flak vests cannot be worn anymore. Integrated with some tactical vest features, providing a bulletproof level of power armor.</description>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Apparel/AScompFD</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.00</drawSize>
		</graphicData>
		<costList>
            <AM_AramidCloth>75</AM_AramidCloth>
			<AM_UHMWPEPlate>4</AM_UHMWPEPlate>
		</costList>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>600</MaxHitPoints>
			<WorkToMake>24000</WorkToMake>
			<Mass>8</Mass>
			<Flammability>0.3</Flammability>
			<ArmorRating_Sharp>0.98</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.5</ArmorRating_Blunt>
			<ArmorRating_Heat>0.4</ArmorRating_Heat>
			<Insulation_Cold>14.4</Insulation_Cold>
			<Insulation_Heat>3</Insulation_Heat>
			<EquipDelay>3</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.42</MoveSpeed>
			<CarryingCapacity>10</CarryingCapacity>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/AScompFD</wornGraphicPath>
			<layers>
              <li>Shell</li>
			  <li>Middle</li>
			</layers>
			<tags>
				<li>IndustrialAdvanced</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		    <tradeTags>
      <li>Clothing</li>
      <li>Armor</li>
    </tradeTags>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<only>(0.44,0.44,0.44)</only>
				</li>
				<li>
					<only>(0.62,0.62,0.62)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>

