      <graphicClass>Graphic_Multi</graphicClass>
      <texPath>Things/Building/DownwardStairs</texPath>
      <drawSize>7</drawSize>
    </graphicData>
    <size>(2,3)</size>
    <rotatable>true</rotatable>
