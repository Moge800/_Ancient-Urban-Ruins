      <expandHomeArea>true</expandHomeArea>
      <claimable>true</claimable>
    </building>
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <modExtensions>
      <li Class="AncientMarket_Libraray.ModExtension_Map">
        <maps>
          <li>AM_Bunker_A</li>
          <li>AM_Bunker_B</li>
          <li>AM_Bunker_C</li>
          <li>AM_Bunker_D</li>
          <li>AM_Bunker_E</li>
