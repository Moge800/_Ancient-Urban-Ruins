	<ThingDef ParentName="AM_NonfunctionalBuilding_Impassable">
		<defName>AM_BlockedStairsX</defName>
		<label>blocked staircase</label>
		<description>An inaccessible staircase piled with debris. Entirely inaccessible.</description>
		<graphicData>
			<texPath>Things/Building/BlockedStairsX</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>7</drawSize>
		</graphicData>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		 <useHitPoints>false</useHitPoints>
		<fillPercent>0.4</fillPercent>
		<size>(2,3)</size>
		<costList>
			<Steel>40</Steel>
		</costList>
		<building>
            <claimable>true</claimable>
            <deconstructible>true</deconstructible>
            <alwaysDeconstructible>true</alwaysDeconstructible>
        </building>
	</ThingDef>

