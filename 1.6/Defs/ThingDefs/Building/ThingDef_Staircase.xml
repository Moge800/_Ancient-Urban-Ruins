<Defs>


  <!-- 入口 -->
    <ThingDef ParentName="PortalBase">
        <defName>AM_Entrance_Bunker</defName>
        <label>Ancient staircase</label>
        <description>A staircase descends into the basement, where it is quite dark.</description>
        <thingClass>AncientMarket_Libraray.MapEntrance</thingClass>
        <category>Building</category>
        <graphicData>
            <graphicClass>Graphic_Multi</graphicClass>
            <texPath>Things/Building/DownwardStairs</texPath>
            <drawSize>7</drawSize>
        </graphicData>
        <size>(2,3)</size>
        <rotatable>true</rotatable>
        <building>
            <expandHomeArea>true</expandHomeArea>
            <claimable>true</claimable>
        </building>
        <modExtensions>
            <li Class="AncientMarket_Libraray.ModExtension_Map">
                <maps>
                    <li>AM_Bunker_A</li>
                    <li>AM_Bunker_B</li>
                    <li>AM_Bunker_C</li>
                    <li>AM_Bunker_D</li>
                    <li>AM_Bunker_E</li>
                    <li>AM_Bunker_F</li>
                    <li>AM_Bunker_G</li>
                    <li>AM_Bunker_H</li>
                    <li>AM_Bunker_I</li>
                </maps>
            </li>
        </modExtensions>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
    </ThingDef>

