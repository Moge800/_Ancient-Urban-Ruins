<Defs>

	<ThingDef ParentName="AM_ArmorMachineableBase">
		<defName>AM_CompFlakSuit</defName>
		<label>composite flak suit</label>
		<description>Combat clothing made of aramid material, when paired with a composite bulletproof vest, offers the benefits of lightweight mobility and significant protection. This type of attire was frequently worn by ancient soldiers.</description>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Apparel/BossSuit/CompFlakSuit</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>1.00</drawSize>
		</graphicData>
		<costList>
            <AM_AramidCloth>75</AM_AramidCloth>
			<AM_HeavyCompositePlate>2</AM_HeavyCompositePlate>
		</costList>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>600</MaxHitPoints>
			<MarketValue>1700</MarketValue>
			<WorkToMake>24000</WorkToMake>
			<Mass>8</Mass>
			<Flammability>0.3</Flammability>
			<ArmorRating_Sharp>0.92</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.25</ArmorRating_Blunt>
			<ArmorRating_Heat>0.5</ArmorRating_Heat>
			<Insulation_Cold>10.4</Insulation_Cold>
			<Insulation_Heat>13</Insulation_Heat>
			<EquipDelay>3</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.1</MoveSpeed>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/BossSuit/CompFlakSuit</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
			<layers>
              <li>Shell</li>
			  <li>Middle</li>
			</layers>
			<tags>
				<li>AM_Boss</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<only>(1,1,1)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>
	
	<ThingDef ParentName="AM_ArmorHelmetMakeableBase">
